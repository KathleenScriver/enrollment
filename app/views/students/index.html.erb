<h1>All Students</h1>

<%= link_to "Create New Student", new_student_path %>

<div>
<% @students.each do |student| %>
  <ul id="student-<%= student.id %>">
    <li><%= student.name %></li>
    <li>
      <%= link_to "Delete Student", student_path(student), method: :delete,
        data: {confirm: "Are you sure you want to delete #{student.name}?"} %>
      </li>
  </ul>
  <% end %>
</div>
