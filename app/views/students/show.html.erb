<h1>Student: <%= @student.name %></h1>

<h3>Addresses</h3>
<div class='address'>
  <% @student.addresses.each do |address| %>
  <p><%= address.description %></p>
  <p><%= address.street_address %></p>
  <p><%= address.city %>, <%= address.state %> <%= address.zip_code %></p>
  <% end %>
</div>

<h3>Courses</h3>
<div class='courses'>
  <% @student.courses.each do |course| %>
  <p><%= course.name %></p>
  <% end %>
</div>

<ul>
  <li><%= link_to "Edit Student", edit_student_path(@student) %></li>
  <li><%= link_to "Create New Student", new_student_path %></li>
  <li><%= link_to "Return to All Students", students_path %></li>
</ul>
